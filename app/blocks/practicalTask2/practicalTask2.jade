mixin practicalTask2()
	+b.practicalTask2&attributes(attributes)
		block
		.container-fluid
			.row
				h1.page-header.text-center PracticalTask2
				h2.sub-header.text-center Sorting table
			.row
				.container.js-watchURL
					a(data-url="small").col-md-5.btn-success.btn-lg.block-center Получить малый список и создать таблицу
					a(data-url="big").col-md-5.col-md-push-2.btn-success.btn-lg.block-center Получить большой список и создать таблицу

			.row
				.main.text-center
					.pagination-wrapper.js-watchPagination
					h1.js-loading
					.table-responsive
						table.table.table-striped.js-table
							thead
								tr
									th id
									th firstName
									th lastName
									th email
									th phone
									th streetAddress
									th city
									th state
									th zip
									th description
							tbody.js-watchCurrentPerson
					.js-targetPersonContainer
					.pagination-wrapper.js-watchPagination
